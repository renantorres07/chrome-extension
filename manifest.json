{
    "manifest_version": 3,
    "name": "Extensão de Tema Personalizado",
    "version": "1.0",
    "description": "Uma extensão para personalizar o tema do Chrome com função de luz noturna.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage",
      "tabs",
      "theme"
    ]
  }
  